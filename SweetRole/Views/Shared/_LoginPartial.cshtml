@using Microsoft.AspNetCore.Identity
@using SweetRole.Areas.Identity.Data
@inject SignInManager<SweetRoleUser> SignInManager
@inject UserManager<SweetRoleUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li>
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="waves-effect waves-light btn orange darken-1">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

